<Page loaded="pageLoaded" xmlns="http://www.nativescript.org/tns.xsd">
    <ActionBar title="{{ language('title') }}" />
    <ScrollView>
        <StackLayout>
            <ActivityIndicator busy="{{ processing }}" />

            <Label text="{{ language('phone') }}" />
            <TextField text="{{ phone }}" returnKeyType="next" />

            <Label text="{{ language('password') }}" />
            <TextField text="{{ password }}" returnKeyType="done" secure="true" />

            <Button text="{{ language('signin') }}"
                tap="{{ buttontap_signin }}" />

            <Label text="{{ language('signup') }}"
                tap="{{ labeltap_signup }}" />
            <Label text="{{ language('forgotpassword') }}"
                tap="{{ labeltap_forgotpassword }}" />

            <Button type="guest" text="{{ language('guest') }}"
                tap="{{ buttontap_signin }}" />
        </StackLayout>
    </ScrollView>
</Page>